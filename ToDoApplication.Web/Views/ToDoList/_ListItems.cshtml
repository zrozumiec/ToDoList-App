@model ToDoListsVM;

<div>
    <table class="table table-hover" aria-describedby="TaskCategory">
        <thead>
            <tr>
                <th>
                    Id
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Hidden
                </th>
                <th>
                    Creation Date
                </th>
                <th>
                    Number of tasks
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var list in Model.ToDoLists)
            {
                <tr class="@(list.IsHidden ? "table-secondary" : "table-light")">
                    <td>
                        @Html.DisplayFor(c => list.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(c => list.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(c => list.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(c => list.IsHidden)
                    </td>
                    <td>
                        @Html.DisplayFor(c => list.CreationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(c => list.NumberOfTasks)
                    </td>
                    <td>
                        @Html.ActionLink("Tasks", "Index", "ToDoTask", new {listId = list.Id}, null)
                        @if (list.Name != "Important" && list.Name != "Daily" && list.Name != "Today")
                        {
                            <text> | </text> @Html.ActionLink("Edit", "Edit", new {id = list.Id}) <text> | </text>
                            @Html.ActionLink("Details", "Details", new { id = list.Id }) <text> | </text>
                            @Html.ActionLink("Delete", "Delete", new { id = list.Id }, new { onclick = "return confirm('Do you want to delete this row?');" }) <text> | </text>
                            @Html.ActionLink("Copy", "Copy", new {listId = list.Id}) <text> | </text>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
