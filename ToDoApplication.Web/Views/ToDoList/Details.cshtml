    ViewData["Title"] = "Details";
}

<table class="table table-sm table-bordered table-striped" aria-describedby="TaskCategoryDetails">
    <tbody>
        <tr>
            <th>
                @Html.DisplayNameFor(model => Model.Id)
            </th>
            <td>
                @Model.Id
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => Model.Name)
            </th>
            <td>
                @Model.Name
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => Model.Description)
            </th>
            <td>
                @Model.Description
