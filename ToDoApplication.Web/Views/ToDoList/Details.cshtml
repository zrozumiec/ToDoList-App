        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => Model.CreationDate)
            </th>
            <td>
                @Model.CreationDate
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => Model.IsHidden)
            </th>
            <td>
                @Model.IsHidden
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => Model.NumberOfTasks)
            </th>
            <td>
                @Model.NumberOfTasks
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => Model.UserId)
            </th>
